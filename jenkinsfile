pipeline{

    agent any 

    environment{
        IMAGE_NAME = "gopalgoyal/testpipeline"
        IMAGE_TAG = 'latest'
    }

    stages{
        stage('Checkout'){
            steps{
                checkout scm
            }
        }
        stage('Build'){
            steps{
                sh 'dotnet build'
            }
        }
        stage('Test'){
            steps{
                sh 'dotnet test'
            }
        }
        stage('Docker image build'){
            steps{
                sh 'cd \'/var/lib/jenkins/workspace/TestPipeline\''
                script{
                    docker.build("${IMAGE_NAME}:${IMAGE_TAG}","-f TestPipeline/Dockerfile .")
                }
            }
        }
        // stage('Docker Push'){
        //     steps{

        //     }
        // }
    }
}
